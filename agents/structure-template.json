{
  "projectType": "{{PROJECT_TYPE}}",
  "projectName": "{{PROJECT_NAME}}",
  "version": "1.0.0",
  "createdAt": "{{CREATED_AT}}",
  
  "directoryStructure": {
    "rules": [
      {
        "path": "src/",
        "description": "源代码目录",
        "required": true,
        "allowedTypes": ["directory"],
        "children": {
          "components/": {
            "description": "可复用组件",
            "filePattern": "*.{js,ts,jsx,tsx,vue}",
            "namingConvention": "PascalCase"
          },
          "pages/": {
            "description": "页面组件",
            "filePattern": "*.{js,ts,jsx,tsx,vue}",
            "namingConvention": "PascalCase"
          },
          "utils/": {
            "description": "工具函数",
            "filePattern": "*.{js,ts}",
            "namingConvention": "camelCase"
          },
          "api/": {
            "description": "API接口定义",
            "filePattern": "*.{js,ts}",
            "namingConvention": "camelCase"
          }
        }
      },
      {
        "path": "docs/",
        "description": "项目文档",
        "required": false,
        "allowedTypes": ["directory"],
        "children": {
          "api/": "API文档",
          "design/": "设计文档",
          "deployment/": "部署文档"
        }
      },
      {
        "path": "tests/",
        "description": "测试文件",
        "required": true,
        "filePattern": "*.{test,spec}.{js,ts}",
        "structure": "mirror-src"
      }
    ]
  },

  "fileNamingRules": {
    "components": {
      "pattern": "PascalCase",
      "extension": [".jsx", ".tsx", ".vue"],
      "example": "UserProfile.jsx"
    },
    "pages": {
      "pattern": "PascalCase", 
      "extension": [".jsx", ".tsx", ".vue"],
      "example": "LoginPage.jsx"
    },
    "utils": {
      "pattern": "camelCase",
      "extension": [".js", ".ts"],
      "example": "formatDate.js"
    },
    "api": {
      "pattern": "camelCase",
      "extension": [".js", ".ts"],
      "example": "userApi.js"
    },
    "tests": {
      "pattern": "camelCase.test",
      "extension": [".js", ".ts"],
      "example": "userApi.test.js"
    }
  },

  "claudeCodeRules": {
    "strictMode": true,
    "autoValidation": true,
    "reminders": [
      {
        "trigger": "beforeFileCreation",
        "message": "⚠️ 请确认文件路径符合项目目录结构规范",
        "checkRules": ["directoryStructure", "fileNaming"]
      },
      {
        "trigger": "beforeDirectoryCreation", 
        "message": "⚠️ 请确认目录创建符合项目架构设计",
        "checkRules": ["directoryStructure"]
      },
      {
        "trigger": "onStructureViolation",
        "message": "❌ 检测到目录结构违规，请按照规范调整",
        "action": "showViolationDetails"
      }
    ]
  },

  "violations": {
    "common": [
      "在根目录创建源码文件",
      "组件命名不符合PascalCase规范",
      "工具函数放在错误目录",
      "测试文件路径不匹配源文件"
    ],
    "warnings": [
      "缺少必需的目录结构",
      "文件扩展名不符合约定",
      "目录嵌套过深（超过4层）"
    ]
  }
}